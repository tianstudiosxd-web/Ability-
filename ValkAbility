UIStroke.Thickness = 2
UIStroke.Parent = MinimizedButton

-- RGB Animation
spawn(function()
    while true do
        for hue = 0, 1, 0.01 do
            UIStroke.Color = Color3.fromHSV(hue, 1, 1)
            wait(0.03)
        end
    end
end)

-- Functions
local function updateSpeed()
    SpeedDisplay.Text = tostring(currentSpeed)
end

local function showWarning(message)
    WarningLabel.Text = message
    WarningLabel.Visible = true
    wait(2)
    WarningLabel.Visible = false
end

-- Auto Apply Walkspeed (Setiap Frame)
RunService.Heartbeat:Connect(function()
    local character = player.Character
    if character then
        local humanoid = character:FindFirstChild("Humanoid")
        if humanoid and humanoid.WalkSpeed ~= currentSpeed then
            humanoid.WalkSpeed = currentSpeed
        end
    end
end)

-- Anti Hit System (Mencegah damage dan knockback)
local function setupAntiHit(character)
    local humanoid = character:WaitForChild("Humanoid")
    local rootPart = character:WaitForChild("HumanoidRootPart")
    
    -- Simpan health asli
    originalHealth = humanoid.Health
    originalMaxHealth = humanoid.MaxHealth
    
    -- Monitor health changes
    humanoid.HealthChanged:Connect(function(health)
        if antiHitEnabled and health < originalHealth then
            humanoid.Health = originalMaxHealth
        end
        originalHealth = humanoid.Health
    end)
    
    -- Prevent knockback dengan anchoring sementara
    RunService.Heartbeat:Connect(function()
        if antiHitEnabled then
            humanoid.Health = originalMaxHealth
            
            -- Disable knockback dengan mencegah velocity changes
            if rootPart and rootPart:IsA("BasePart") then
                local currentVelocity = rootPart.AssemblyLinearVelocity
                -- Hanya reset velocity Y jika terlalu besar (knockback detection)
                if math.abs(currentVelocity.Y) > 50 or currentVelocity.Magnitude > 100 then
                    rootPart.AssemblyLinearVelocity = Vector3.new(currentVelocity.X * 0.5, 0, currentVelocity.Z * 0.5)
                end
            end
        end
    end)
    
    -- Hapus semua damage scripts yang ada
    for _, descendant in pairs(character:GetDescendants()) do
        if descendant:IsA("Script") or descendant:IsA("LocalScript") then
            if descendant.Name:lower():find("damage") or descendant.Name:lower():find("hurt") then
                if antiHitEnabled then
                    descendant.Disabled = true
                end
            end
        end
    end
end
-- One Hit Kill System (Benar-benar membunuh musuh)
local function setupOneHit(character)
    local function onHit(hit)
        if not oneHitEnabled then return end
        
        local enemyCharacter = hit.Parent
        if enemyCharacter and enemyCharacter ~= character then
            local enemyHumanoid = enemyCharacter:FindFirstChild("Humanoid")
            local enemyPlayer = game.Players:GetPlayerFromCharacter(enemyCharacter)
            
            -- Pastikan ini adalah musuh (player lain atau NPC)
            if enemyHumanoid and enemyHumanoid.Health > 0 then
                -- Kill secara langsung
                enemyHumanoid.Health = 0
                enemyHumanoid:TakeDamage(enemyHumanoid.MaxHealth)
                
                -- Fallback: break joints jika masih hidup
                spawn(function()
                    wait(0.1)
                    if enemyHumanoid.Health > 0 then
                        enemyHumanoid:ChangeState(Enum.HumanoidStateType.Dead)
                        if enemyCharacter:FindFirstChild("Head") then
                            enemyCharacter.Head:Destroy()
                        end
                    end
                end)
            end
        end
    end
    
    -- Monitor semua part di character untuk collision
    for _, part in pairs(character:GetDescendants()) do
        if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
            part.Touched:Connect(onHit)
        end
    end
    
    -- Monitor tools
    character.ChildAdded:Connect(function(child)
        if child:IsA("Tool") then
            for _, part in pairs(child:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Touched:Connect(onHit)
                end
            end
        end
    end)
end

-- Button Functions
PlusButton.MouseButton1Click:Connect(function()
    if currentSpeed < 100 then
        currentSpeed = currentSpeed + 1
        updateSpeed()
    else
        showWarning("Cannot be more than 100")
    end
end)

MinusButton.MouseButton1Click:Connect(function()
    if currentSpeed > 1 then
        currentSpeed = currentSpeed - 1
        updateSpeed()
    end
end)

InfiniteJumpButton.MouseButton1Click:Connect(function()
    infiniteJumpEnabled = not infiniteJumpEnabled
    if infiniteJumpEnabled then
        InfiniteJumpButton.Text = "ON"
        InfiniteJumpButton.BackgroundColor3 = Color3.fromRGB(70, 255, 70)
    else
        InfiniteJumpButton.Text = "OFF"
        InfiniteJumpButton.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
    end
end)

AntiHitButton.MouseButton1Click:Connect(function()
    antiHitEnabled = not antiHitEnabled
    if antiHitEnabled then
        AntiHitButton.Text = "ON"
        AntiHitButton.BackgroundColor3 = Color3.fromRGB(70, 255, 70)
        showWarning("Anti Hit Enabled!")
        
        -- Set max health saat enable
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChild("Humanoid")
            if humanoid then
                humanoid.Health = humanoid.MaxHealth
                originalMaxHealth = humanoid.MaxHealth
            end
        end
    else
        AntiHitButton.Text = "OFF"
        AntiHitButton.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
        showWarning("Anti Hit Disabled")
    end
end)

OneHitButton.MouseButton1Click:Connect(function()
    oneHitEnabled = not oneHitEnabled
    if oneHitEnabled then
        OneHitButton.Text = "ON"
        OneHitButton.BackgroundColor3 = Color3.fromRGB(70, 255, 70)
        showWarning("One Hit Kill Enabled!")
    else
        OneHitButton.Text = "OFF"
        OneHitButton.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
        showWarning("One Hit Kill Disabled")
    end
end)

MinimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    MainFrame.Visible = not isMinimized
    MinimizedButton.Visible = isMinimized
end)

MinimizedButton.MouseButton1Click:Connect(function()
    isMinimized = false
    MainFrame.Visible = true
    MinimizedButton.Visible = false
end)

ExitButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Infinite Jump Logic
UserInputService.JumpRequest:Connect(function()
    if infiniteJumpEnabled then
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChild("Humanoid")
            if humanoid then
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            end
        end
    end
end)

-- Character Reset Handler
player.CharacterAdded:Connect(function(character)
    local humanoid = character:WaitForChild("Humanoid")
    wait(0.1)
    humanoid.WalkSpeed = currentSpeed
    
    -- Setup systems untuk character baru
    setupAntiHit(character)
    setupOneHit(character)
end)

-- Initial Setup
if player.Character then
    setupAntiHit(player.Character)
    setupOneHit(player.Character)
end

updateSpeed()
print("Ability GUI Loaded Successfully!")
print("Features: Walkspeed, Infinite Jump, Anti Hit, One Hit Kill")
